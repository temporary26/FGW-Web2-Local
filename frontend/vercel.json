{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "https://quickcv-backend-dqn1.onrender.com",
    "VITE_APP_NAME": "QuickCV",
    "VITE_APP_VERSION": "1.0.0",
    "VITE_ENABLE_ANALYTICS": "false",
    "VITE_ENABLE_PWA": "false"
  },
  "build": {
    "env": {
      "VITE_API_URL": "https://quickcv-backend-dqn1.onrender.com",
      "VITE_APP_NAME": "QuickCV",
      "VITE_APP_VERSION": "1.0.0",
      "VITE_ENABLE_ANALYTICS": "false",
      "VITE_ENABLE_PWA": "false"
    }
  }
}